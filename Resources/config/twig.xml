<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_media.twig.media_extension.class">Isometriks\Bundle\MediaBundle\Twig\Extension\MediaExtension</parameter>
    </parameters>

    <services>
        <service id="isometriks_media.twig.media_extension" class="%isometriks_media.twig.media_extension.class%">
            <argument type="service" id="isometriks_media.util.image_manipulator" />
            <tag name="twig.extension" />
        </service>
    </services>
     
</container>