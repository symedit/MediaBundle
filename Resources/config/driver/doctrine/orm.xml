<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.repository.media.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="symedit.repository.image.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="symedit.repository.file.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="symedit.repository.image_gallery.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="symedit.repository.gallery_item.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <!-- Image Listener -->
        <service id="symedit_media.event_listener.image_listener" class="SymEdit\Bundle\MediaBundle\Doctrine\Orm\MediaListener">
            <argument type="service" id="symedit_media.image_upload_manager" />
            <argument type="service" id="symedit_media.namer" />
            <argument>%symedit.model.image.class%</argument>
            <argument>%symedit_media.paths.image%</argument>
            <tag name="doctrine.event_subscriber" priority="-100" />
        </service>

        <!-- File Listener -->
        <service id="symedit_media.event_listener.file_listener" class="SymEdit\Bundle\MediaBundle\Doctrine\Orm\MediaListener">
            <argument type="service" id="symedit_media.file_upload_manager" />
            <argument type="service" id="symedit_media.namer" />
            <argument>%symedit.model.file.class%</argument>
            <argument>%symedit_media.paths.file%</argument>
            <tag name="doctrine.event_subscriber" priority="-100" />
        </service>
    </services>
</container>
