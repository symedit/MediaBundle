<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="isometriks_media.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%isometriks_media.model_manager_name%</argument>
        </service>

        <service id="isometriks_media.media_manager" class="Isometriks\Bundle\MediaBundle\Doctrine\MediaManager">
            <argument>%isometriks_media.model.media.class%</argument>
            <argument type="service" id="isometriks_media.entity_manager" />
        </service>
        
        <service id="isometriks_media.media_gallery_manager" class="Isometriks\Bundle\MediaBundle\Doctrine\MediaGalleryManager">
            <argument>%isometriks_media.model.media_gallery.class%</argument>
            <argument type="service" id="isometriks_media.entity_manager" />
        </service>

        <service id="isometriks_media.event_listener.media_listener" class="Isometriks\Bundle\MediaBundle\Doctrine\Orm\MediaListener">
            <argument type="service" id="isometriks_media.upload_manager" />
            <tag name="doctrine.event_subscriber" priority="-100" />
        </service>
    </services>
    
</container>