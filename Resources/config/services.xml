<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit_media.upload_manager.class">SymEdit\Bundle\MediaBundle\Upload\UploadManager</parameter>
        <parameter key="symedit_media.form.type.file.class">SymEdit\Bundle\MediaBundle\Form\Type\FileType</parameter>
    </parameters>

    <services>
        <service id="symedit_media.upload_manager" class="%symedit_media.upload_manager.class%">
            <argument>%symedit_media.web_root%</argument>
            <argument>%symedit_media.upload_dir%</argument>
        </service>

        <service id="symedit_media.form.type.file" class="%symedit_media.form.type.file.class%">
            <argument>%symedit_media.model.media.class%</argument>
            <tag name="form.type" alias="symedit_media" />
        </service>
    </services>
</container>