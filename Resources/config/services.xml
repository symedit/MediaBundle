<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit_media.image_upload_manager.class">SymEdit\Bundle\MediaBundle\Upload\ImageUploadManager</parameter>
        <parameter key="symedit_media.file_upload_manager.class">SymEdit\Bundle\MediaBundle\Upload\UploadManager</parameter>
    </parameters>

    <services>
        <!-- Image Uploader -->
        <service id="symedit_media.image_upload_manager" class="%symedit_media.image_upload_manager.class%">
            <argument type="service">
                <service class="Gaufrette\Filesystem" factory-service="knp_gaufrette.filesystem_map" factory-method="get">
                    <argument>symedit_image</argument>
                </service>
            </argument>
            <argument type="service" id="liip_imagine.cache.manager" />
            <argument>%liip_imagine.filter_sets%</argument>
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false" />
            </call>
        </service>

        <!-- File Uploader -->
        <service id="symedit_media.file_upload_manager" class="%symedit_media.file_upload_manager.class%">
            <argument type="service">
                <service class="Gaufrette\Filesystem" factory-service="knp_gaufrette.filesystem_map" factory-method="get">
                    <argument>symedit_file</argument>
                </service>
            </argument>
        </service>

        <!-- Image -->
        <service id="symedit.controller.image" class="%symedit.controller.image.class%">
            <argument>symedit</argument>
            <argument>image</argument>
            <argument />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- File -->
        <service id="symedit.controller.file" class="%symedit.controller.file.class%">
            <argument>symedit</argument>
            <argument>file</argument>
            <argument />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>